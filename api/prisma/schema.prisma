generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                    String            @id @default(uuid())
  email                 String            @unique
  password              String
  createdAt             DateTime          @default(now())
  updatedAt             DateTime          @updatedAt
  role                  Role              @default(USER)
  universityId          String?
  emailVerifiedAt       DateTime?
  refreshTokenExpiresAt DateTime?
  refreshTokenHash      String?
  documents             Document[]
  projects              MobilityProject[]
  passports             Passport[]
  University            University?       @relation(fields: [universityId], references: [id])
}

model Document {
  id        String   @id @default(uuid())
  title     String
  type      String
  expiresAt DateTime
  createdAt DateTime @default(now())
  userId    String
  fileMime  String?
  fileName  String?
  filePath  String?
  fileSize  Int?
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([type])
}

model Passport {
  id          String   @id @default(uuid())
  countryCode String
  createdAt   DateTime @default(now())
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  @@unique([userId, countryCode])
  @@index([userId])
}

model MobilityProject {
  id                 String   @id @default(uuid())
  destinationCountry String
  purpose            String
  startDate          DateTime
  endDate            DateTime
  isActive           Boolean  @default(true)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  userId             String
  user               User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model RequirementRule {
  id                 String  @id @default(uuid())
  passportCountry    String
  destinationCountry String
  purpose            String
  requiredType       String
  title              String
  notes              String?
  minDays            Int?
  maxDays            Int?

  @@index([passportCountry, destinationCountry, purpose])
}

model Country {
  code String @id @db.VarChar(2)
  name String

  @@index([name])
}

model StudyPurpose {
  key   String @id
  label String
}

model University {
  id           String                  @id @default(uuid())
  slug         String                  @unique
  name         String
  countryCode  String
  city         String?
  websiteUrl   String?
  createdAt    DateTime                @default(now())
  updatedAt    DateTime                @updatedAt
  requirements UniversityRequirement[]
  User         User[]
}

model UniversityRequirement {
  id            String              @id @default(uuid())
  universityId  String
  title         String
  description   String?
  kind          RequirementKind     @default(REQUIRED)
  priority      RequirementPriority @default(MEDIUM)
  stayMode      StayMode            @default(ANY)
  dueDate       DateTime?
  dueDaysBefore Int?
  ctaLabel      String?
  ctaUrl        String?
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
  university    University          @relation(fields: [universityId], references: [id], onDelete: Cascade)

  @@index([universityId])
  @@index([stayMode, kind])
}

enum RequirementKind {
  REQUIRED
  INFO
}

enum RequirementPriority {
  LOW
  MEDIUM
  HIGH
}

enum Role {
  USER
  ADMIN
  UNIVERSITY
}

enum StayMode {
  SHORT
  LONG
  ANY
}
