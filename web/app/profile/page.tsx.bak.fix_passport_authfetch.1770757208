"use client";

import * as React from "react";
import { useRouter } from "next/navigation";

import { authFetch as libAuthFetch } from "@/lib/authFetch";
import { API_BASE_URL } from "@/lib/config";

import PassportsSection from "@/app/dashboard/_components/PassportsSection";

type MeResponse = {
  user: { id: string; email: string };
};

export default function ProfilePage() {
  const router = useRouter();

  const [email, setEmail] = React.useState<string>("...");
  const [loading, setLoading] = React.useState(true);

  // ✅ wrapper STRICT qui retourne Response (pour PassportsSection)
  async function authFetchRes(path: string, init?: RequestInit): Promise<Response> {
    const r = await libAuthFetch(path, init);
    return r.res;
  }

  React.useEffect(() => {
    async function boot() {
      try {
        const r = await libAuthFetch("/api/v1/me");
        if (!r.res.ok) throw new Error("Unauthorized");
        const data = r.data as MeResponse;
        setEmail(data.user.email);
      } catch {
        router.push("/login");
      } finally {
        setLoading(false);
      }
    }
    boot();
  }, [router]);

  return (
    <div className="space-y-8">
      <div>
        <h1 className="text-3xl font-bold">Profile</h1>
        <p className="mt-2 text-sm text-gray-600">
          {loading ? "Loading…" : <>Logged in as <span className="font-medium">{email}</span></>}
        </p>
      </div>

      {/* STUDENT PROFILE SECTION */}
      <PassportsSection authFetch={authFetchRes} />

      <p className="text-xs text-gray-500">
        API: <span className="font-mono">{API_BASE_URL}</span>
      </p>
    </div>
  );
}
