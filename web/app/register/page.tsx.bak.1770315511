"use client";

import * as React from "react";
import { useRouter } from "next/navigation";
import { Button } from "@/components/ui/button";

type Role = "USER" | "UNIVERSITY";

export default function RegisterPage() {
  const router = useRouter();

  const [role, setRole] = React.useState<Role>("USER");
  const [email, setEmail] = React.useState("");
  const [password, setPassword] = React.useState("");
  const [universitySlug, setUniversitySlug] = React.useState("");

  const [loading, setLoading] = React.useState(false);
  const [error, setError] = React.useState<string | null>(null);

  async function onSubmit(e: React.FormEvent) {
    e.preventDefault();
    setError(null);
    setLoading(true);

    try {
      const base = process.env.NEXT_PUBLIC_API_BASE_URL || "";
      const res = await fetch(`${base}/api/v1/auth/register`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          email,
          password,
          role,
          ...(role === "UNIVERSITY" ? { universitySlug: universitySlug.trim().toLowerCase() } : {}),
        }),
      });

      if (!res.ok) {
        const txt = await res.text().catch(() => "");
        // message simple mais utile
        if (res.status === 409) throw new Error("Email déjà utilisé.");
        throw new Error(txt || `Register failed (${res.status})`);
      }

      const data = await res.json();

      // API returns { user, token } => on stocke le token pour le front
      if (data?.token) {
        try {
          localStorage.setItem("token", data.token);
        } catch {}
      }

      router.push("/dashboard");
    } catch (err: any) {
      setError(err?.message || "Erreur lors de la création de compte.");
    } finally {
      setLoading(false);
    }
  }

  return (
    <div className="min-h-[calc(100vh-60px)] flex items-center justify-center p-6">
      <div className="w-full max-w-md rounded-xl border bg-white p-6 shadow-sm">
        <h1 className="text-xl font-semibold">Create account</h1>
        <p className="text-sm text-muted-foreground mt-1">
          Choose Student or University.
        </p>

        <div className="mt-4 grid grid-cols-2 gap-2">
          <button
            type="button"
            onClick={() => setRole("USER")}
            className={[
              "rounded-lg border px-3 py-2 text-sm font-medium",
              role === "USER" ? "bg-black text-white" : "bg-white",
            ].join(" ")}
          >
            Student
          </button>
          <button
            type="button"
            onClick={() => setRole("UNIVERSITY")}
            className={[
              "rounded-lg border px-3 py-2 text-sm font-medium",
              role === "UNIVERSITY" ? "bg-black text-white" : "bg-white",
            ].join(" ")}
          >
            University
          </button>
        </div>

        <form onSubmit={onSubmit} className="mt-4 space-y-3">
          <div className="space-y-1">
            <label className="text-sm font-medium">Email</label>
            <input
              value={email}
              onChange={(e) => setEmail(e.target.value)}
              type="email"
              autoComplete="email"
              className="w-full rounded-lg border px-3 py-2 text-sm"
              placeholder="you@example.com"
              required
            />
          </div>

          <div className="space-y-1">
            <label className="text-sm font-medium">Password</label>
            <input
              value={password}
              onChange={(e) => setPassword(e.target.value)}
              type="password"
              autoComplete="new-password"
              className="w-full rounded-lg border px-3 py-2 text-sm"
              placeholder="••••••••"
              required
            />
          </div>

          {role === "UNIVERSITY" && (
            <div className="space-y-1">
              <label className="text-sm font-medium">University slug</label>
              <input
                value={universitySlug}
                onChange={(e) => setUniversitySlug(e.target.value)}
                className="w-full rounded-lg border px-3 py-2 text-sm"
                placeholder='ex: "ucsd"'
                required
              />
              <p className="text-xs text-muted-foreground">
                Example: <span className="font-mono">ucsd</span> (lowercase)
              </p>
            </div>
          )}

          {error && (
            <div className="rounded-lg border border-red-200 bg-red-50 px-3 py-2 text-sm text-red-700">
              {error}
            </div>
          )}

          <Button className="w-full" disabled={loading}>
            {loading ? "Creating..." : "Create account"}
          </Button>
        </form>

        <div className="mt-4 text-sm">
          Already have an account?{" "}
          <a className="underline" href="/login">
            Login
          </a>
        </div>
      </div>
    </div>
  );
}
